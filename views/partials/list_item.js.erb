<li id="item_<%= @item.id %>" class="list_item<%= ' claimed' if @item.claimed %>">  
  <div id="item_name_<%= @item.id %>" class="item_name"><%=h @item.name %></div>
  <span id="item_amount_<%= @item.id %>" class="item_amount"><%=h @item.amount %></span>
  <span class="item_meta">
    <span><form action="/<%= @event.id %>/<%= @item.id %>/delete_item" method="post">
      <input type="hidden" name="_method" value="delete">  
      <input type="submit" value="delete">
    </form></span>
  </span>
  <!-- Created: <%= @item.created_at %> | Updated: <%= @item.updated_at %> -->
</li>